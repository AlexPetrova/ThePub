@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Account" asp-action="Login" class="col-5">
    <div class="form-group">
        <input asp-for="UserName" class="form-control" placeholder="User Name">
        <span asp-validation-for="UserName" class="text-danger error-msg"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger error-msg"></span>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>
</form>